<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="sa.ksu.swe444.hackwati">

    <application
        android:name=".font.CustomFontApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".StoryActivity"></activity>
        <activity android:name=".SignUp"></activity>
        <activity
            android:name=".InnerStoryActivity"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".Recording.RecordingActivity" />
        <activity android:name=".explor.ExploreActivity" />
        <activity android:name=".exploreActivity" />
        <activity android:name=".MainActivity" />
        <activity android:name=".AdminActivity" />
        <activity android:name=".AdminStoryActivity" />
        <activity
            android:name=".ui.profileActivity.ProfileActivity"
            android:label="@string/app_name"
            android:parentActivityName=".MainActivity"></activity>
        <activity
            android:name=".UserProfile"
            android:label="@string/app_name" />
        <activity android:name=".Login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SplashActivity" />
    </application>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <uses-permission android:name="android.permission.RECORD_AUDIO" />

</manifest>