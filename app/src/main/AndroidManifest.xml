<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="sa.ksu.swe444.hackwati">

    <application
        android:name=".font.CustomFontApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".Menu"></activity>    <activity android:name=".storyActivity.StoryActivity"></activity>
        <activity android:name=".SignUp"></activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Login" />
        <activity android:name=".SplashActivity" />
        <activity
            android:name=".ui.profileActivity.ProfileActivity"
            android:label="@string/app_name"
            android:parentActivityName=".MainActivity"></activity>
        <activity
            android:name=".UserProfile"
            android:label="@string/app_name"></activity>
        <activity android:name=".Recording.RecordingActivity" />
    </application>
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-permission android:name="android.permission.WAKE_LOCK" />

</manifest>