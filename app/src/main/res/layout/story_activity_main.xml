<?xml version="1.0" encoding="utf-8"?>

<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/htab_maincontent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/rel1"
        android:layout_width="match_parent"
        android:layout_height="271dp"
        android:layout_marginTop="40dp">


        <ImageView
            android:id="@+id/cover"
            android:layout_width="173dp"
            android:layout_height="200dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="20dp"
            android:background="@drawable/shape_subscribe"
            android:backgroundTint="#e1e1e1"
            android:contentDescription="اسم الكتاب"
            android:orientation="horizontal"
            android:src="@drawable/gray" />



        <TextView
            android:id="@+id/bookName"
            android:layout_width="216dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="العنوان"
            android:textSize="33sp" />


        <TextView
            android:id="@+id/duration"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_below="@id/bookName"
            android:layout_marginTop="20dp"
            android:layout_marginRight="75dp"
            android:text="٣٠:٢"
            android:textSize="18sp"

            />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_below="@id/duration"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/channelname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@id/channelimage"
                android:layout_marginTop="6dp"
                android:layout_marginRight="41dp"
                android:text="غيداءالعجاجي"

                android:textSize="18dp" />

            <ImageView
                android:id="@+id/channelimage"
                android:layout_width="30dp"
                android:layout_height="30dp"
              />
        </RelativeLayout>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="210dp">



        <Button
            android:id="@+id/listenBtn"
            android:layout_width="159dp"
            android:layout_height="41dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/shape"
            android:text="استمع"
            android:textStyle="bold"
            android:layout_marginLeft="24dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <Button
                android:id="@+id/subscribeBtn"
                android:layout_width="159dp"
                android:layout_height="41dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/shape"
                android:shadowColor="@color/lightBlue"
                android:tag="off"
                android:text=""
                android:textColor="@color/darkBlue"
                android:layout_marginLeft="24dp" />


        </RelativeLayout>


    </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rel1"
            android:layout_marginTop="30dp"
            android:layout_margin="40dp">

            <TextView
                android:id="@+id/summ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="ملخص القصة:"
                android:textSize="25sp"
                android:background="#F3F3F3"/>

            <TextView
                android:id="@+id/discrebtion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/summ"
                android:layout_centerInParent="true"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:text="العنوان"
                android:textAlignment="center"
                android:textSize="20dp" />

        </RelativeLayout>




