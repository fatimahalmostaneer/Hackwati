<?xml version="1.0" encoding="UTF-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:fitsSystemWindows="true">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            app:popupTheme="@style/AppTheme.AppBarOverlay"
            app:title="الحساب الشخصي"
            app:titleTextColor="#AEDFE9E9"

            />

    </com.google.android.material.appbar.AppBarLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:background="@android:color/white"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/dodo"
            android:layout_width="105dp"
            android:layout_height="73dp"
            android:layout_gravity="center"
            android:alpha=".6"
            android:onClick="selectImage"
            android:src="@drawable/animal_p" />


        <LinearLayout
            android:layout_width="351dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nameSignUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:text="الاسم"
                />

            <TextView
                android:id="@+id/nameSignUpHin"
                android:layout_width="122dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="اسماء الجديع"
                android:textSize="15dp" />



            <TextView
                android:id="@+id/emailSignUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="20dp"

                android:text="الايميل" />

            <TextView
                android:id="@+id/emailSignUpHin"
                android:layout_width="141dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:ems="10"
                android:hint="asma@gmail.com"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/passwordSignUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="30dp"

                android:text="كلمة المرور" />

            <TextView
                android:id="@+id/passwordSignUpHin"
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:ems="10"
                android:hint="*******"
                android:inputType="numberPassword"
                android:textSize="15dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#AAAAAA" />


            <TextView
                android:id="@+id/subscriber"
                android:layout_width="wrap_content"
                android:layout_height="42dp"

                android:layout_marginTop="0dp"
                android:text="عدد المتابعين"
                />


            <TextView
                android:id="@+id/subscriberno"
                android:layout_width="122dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="-22dp"
                android:ems="10"
                android:hint="300,34"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/subscribed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"

                android:text="عدد المتبعون" />

            <TextView
                android:id="@+id/subscribedno"
                android:layout_width="134dp"
                android:layout_height="27dp"
                android:ems="10"
                android:hint="499,22"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/story"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="عدد القصص" />

            <TextView
                android:id="@+id/storyno"
                android:layout_width="150dp"
                android:layout_height="20dp"
                android:ems="10"
                android:hint="68"
                android:textSize="15dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#AAAAAA" />

        </LinearLayout>


        <Button
            android:id="@+id/record_profile"
            android:layout_width="123dp"
            android:layout_height="38dp"
            android:layout_gravity="center"
            android:layout_marginTop="44dp"
            android:text="تسجيل قصة"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="152dp"
            tools:layout_editor_absoluteY="241dp"></Button>

        <Button
            android:id="@+id/logout_profile"
            android:layout_width="123dp"
            android:layout_height="38dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="تسجيل االخروج"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="152dp"
            tools:layout_editor_absoluteY="241dp"></Button>



    </LinearLayout>





</androidx.coordinatorlayout.widget.CoordinatorLayout>